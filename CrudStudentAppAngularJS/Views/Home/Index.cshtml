
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Student.js"></script>



<div ng-app="myApp">
    <div ng-controller="myCntrl">
        <div class="form-horizontal" role="form">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Student Name:</label>
                            <input type="text" class="form-control" ng-model="SName" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Student Age:</label>
                            <input type="text" class="form-control" ng-model="SAge" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Student Department:</label>
                            <input type="text" class="form-control" ng-model="SDepartment" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <br />
                            <input type="submit" style="background-color:forestgreen; color:white" class="form-control" id="insertStd" value="Submit" ng-click="InsertStudent()" />
                            <br />
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div ng-init="GetAllStudent()">
            <h4>Student Record</h4>
            <table cellpadding="12" class="table table-bordered table-hover">
                <tr style="background-color:darkblue; color:white">
                    <th>Sr#</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Department</th>
                    <th>Action</th>
                </tr>
                <tr ng-repeat="Std in student">
                    <td>
                        {{Std.ID}}
                    </td>
                    <td>
                        {{Std.Name}}
                    </td>
                    <td>
                        {{Std.Age}}
                    </td>
                    <td>
                        {{Std.Department}}
                    </td>
                    <td>
                        <input type="button" ng-click="UpdateStudent(Std)" value="Edit" class="btn btn-warning" />
                        <input type="button" ng-click="DeleteStudent(Std)" value="Delete" class="btn btn-danger" />
                    </td>
                </tr>
            </table>
        </div>
    </div>

</div>
